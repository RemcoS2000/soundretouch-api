{
    "name": "soundretouch-api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "prepare": "husky",
        "start": "tsx index.ts"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "bonjour-service": "^1.2.1",
        "debug": "^4.4.3",
        "fast-xml-parser": "^5.3.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@trivago/prettier-plugin-sort-imports": "^6.0.2",
        "@types/debug": "^4.1.12",
        "@types/node": "^25.0.6",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-unused-imports": "^4.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-packagejson": "^2.5.21",
        "tsx": "^4.21.0",
        "typescript": "5.9.3",
        "typescript-eslint": "^8.53.0"
    }
}
