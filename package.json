{
    "name": "@soundretouch/api",
    "version": "1.0.1",
    "description": "Unofficial TypeScript API wrapper for managing Bose SoundTouch devices.",
    "keywords": [
        "bose",
        "soundtouch",
        "soundtouch-api",
        "speaker",
        "audio",
        "web-api",
        "websocket",
        "mdns",
        "bonjour"
    ],
    "homepage": "https://github.com/RemcoS2000/soundretouch-api/",
    "bugs": {
        "url": "https://github.com/RemcoS2000/soundretouch-api/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RemcoS2000/soundretouch-api.git"
    },
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "docs",
        "README.md"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean": "rimraf dist",
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "prepare": "husky",
        "prepublishOnly": "npm run build",
        "start": "tsx index.ts",
        "test": "vitest"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "bonjour-service": "^1.2.1",
        "debug": "^4.4.3",
        "fast-xml-parser": "^5.3.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@trivago/prettier-plugin-sort-imports": "^6.0.2",
        "@types/debug": "^4.1.12",
        "@types/node": "^25.0.6",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-unused-imports": "^4.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "prettier-plugin-packagejson": "^2.5.21",
        "rimraf": "^6.0.1",
        "tsx": "^4.21.0",
        "typescript": "5.9.3",
        "typescript-eslint": "^8.53.0",
        "vitest": "^4.0.17"
    }
}
