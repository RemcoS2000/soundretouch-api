{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2021", "DOM"],
        "types": ["node"],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": ["index.ts", "src", "test"]
}
